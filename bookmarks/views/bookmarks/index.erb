


<ul>
  <% @bookmarks.each do |bookmark| %>
    <li class="bookmark" id="bookmark-<%= bookmark.id %>">
      <a href="<%= bookmark.url %>">
        <%= bookmark.title %>
      </a>
      <form action="/bookmarks/<%= bookmark.id %>" method="POST">
        <input type='hidden' name='_method' value='DELETE'/>
        <input type="submit" value="Delete">
      </form>
    </li>
  <% end %>
</ul>
